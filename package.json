{
  "name": "electron-react-tasks",
  "version": "0.1.0",
  "description": "Simple Electron + React + TypeScript tasks app",
  "main": "dist/main/main/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "npm run typecheck && tsc -b tsconfig.main.json tsconfig.preload.json && vite build",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",
    "format": "prettier --write .",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.renderer.json",
    "start": "electron ."
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "vite": "^5.2.8",
    "vitest": "^1.4.0",
    "electron": "^30.0.0"
  }
}
